@model Repository.Models.CategoriesModel
@{
    ViewBag.Title = "Güncelle";
}

<h2>Ekle</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(x => x.Categories.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(x => x.Categories.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Categories.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(x => x.Categories.Description, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Güncelle" class="btn btn-info" />
        </div>

    </div>
}
<div>
    @Html.ActionLink("Listeye Dön", "Index")
</div>
