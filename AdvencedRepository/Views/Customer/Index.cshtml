@model Repository.Models.CustomerModel
@{
    ViewBag.Title = "Index";
}
<div>
    <form method="post" action="/Customer/Index" class="d-inline-flex">
        <input type="search" name="name" class="form-control" placeholder="Arama" />
        <button class="btn btn-success" type="submit">Ara</button>
    </form>
</div>
<hr />
<a class="btn btn-info float-right" href="/Customer/Ekle">Ekle</a>
<a class="btn btn-info float-right" href="/Customer/Sec">Ürün Seç</a>
<table class="table table-bordered table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(x => x.Customer.CustomerID)</th>
            <th>@Html.DisplayNameFor(x => x.Customer.CompanyName)</th>
            <th>@Html.DisplayNameFor(x => x.Customer.ContactName)</th>
            <th>@Html.DisplayNameFor(x => x.Customer.ContactTitle)</th>
            <th>@Html.DisplayNameFor(x => x.Customer.Address)</th>
        <th>@Html.DisplayNameFor(x => x.Customer.City)</th>
        <th >@Html.DisplayNameFor(x => x.Customer.Region)</th>
            @*<th>@Html.DisplayNameFor(x => x.Customer.PostalCode)</th>
        <th>@Html.DisplayNameFor(x => x.Customer.Country)</th>
        <th>@Html.DisplayNameFor(x => x.Customer.Phone)</th>
        <th>@Html.DisplayNameFor(x => x.Customer.Fax)</th>*@

            <th>Detay</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.clist)
        {
        <tr>
            <td>@item.CustomerID</td>
            <td>@item.CompanyName</td>
            <td>@item.ContactName</td>
            <td>@item.ContactTitle</td>
            <td>@item.Address</td>
            <td>@item.City</td>
            <td>@item.Region</td>
            <td></td>
            <td class="text-center btn btn-info">
            <a href="/Product/Detay/@item.CustomerID">Detay</a>

        </td>
        <td>
            <a href="/Product/Guncelle/@item.CustomerID">Güncelle</a>
        </td>
        <td>
            <a href="/Product/Sil/@item.CustomerID">Sil</a>
        </td>
            
        </tr>
        }



    </tbody>


</table>

